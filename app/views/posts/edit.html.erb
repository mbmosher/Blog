<h1>Editing post</h1>
 
<%= render 'form' %>

<h4>Comments:</h4>
<% @post.comments.each do |comment| %>
<p>
<strong><%= comment.commenter %>: </strong><%= comment.body %>
<%= link_to 'Destroy Comment', [comment.post, comment], 
  method: :delete,
  data: { confirm: 'Are you sure?' } %>
</p>
<% end %>
 
