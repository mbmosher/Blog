<h1>Sign In</h1>

<%= form_for(:session, url: sessions_path) do |f| %>

<%= f.label :email %>
<%= f.text_field :email %>

<%= f.label :password %>
<%= f.password_field :password %>
<br>
<%= f.submit "Sign in", class: "btn" %>
<% end %>

<p>New user? <%= link_to "Sign up now!", new_user_path %></p>

<%= link_to 'Back', posts_path, class: 'btn' %>